{
  "manifest_version": 3,
  "name": "Cashback Extension",
  "version": "1.0",
  "description": "Receba cashback em v√°rias lojas parceiras.",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.loja1.com/*", "*://*.loja2.com/*", "*://*.loja3.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
